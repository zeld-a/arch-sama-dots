// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"autosave": {
  "after_delay": {
   "milliseconds": 1000
  }
 },
 "outline_panel": {
  "dock": "left"
 },
 "vim_mode": false,
	"confirm_quit": false,
	"icon_theme": "Material Icon Theme",
	"title_bar": {
		"show_branch_icon": true,
		"show_project_items": true,
		"show_branch_name": true
	},
	"debugger": {
		"button": true
	},
	"search": {
		"button": true
	},
	"diagnostics": {
		"button": true
	},
	"status_bar": {
		"cursor_position_button": true,
		"active_language_button": true
	},
	"project_panel": {
		"hide_gitignore": true,
		"git_status": true,
		"folder_icons": false,
		"file_icons": false,
		"entry_spacing": "standard",
		"default_width": 250.0,
		"dock": "right",
		"button": true
	},
	"bottom_dock_layout": "contained",
	"agent": {
		"dock": "left",
  "default_profile": "ask",
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-sonnet-4.5"
		},
		"model_parameters": []
	},
	"base_keymap": "VSCode",
	"ssh_connections": [
		{
			"host": "192.168.4.91",
			"username": "chrisg",
			"projects": [
				{
					"paths": ["/home/chrisg"]
				}
			]
		}
	],
	"ui_font_family": "ProFont IIx Nerd Font Mono",
	"ui_font_size": 16,

	"buffer_font_family": "ProFont IIx Nerd Font Mono",
	"buffer_font_size": 16,
	"buffer_line_height": "standard",

	"terminal": {
		"dock": "bottom",
		"button": true,
		"font_family": "ProFont IIx Nerd Font Mono",
		"font_size": 14,
		"line_height": "standard"
	},

	"theme": {
		"mode": "system",
		"light": "Catppuccin Espresso (Blur) [Light]",
		"dark": "One Dark"
	},

	"show_edit_predictions": false,

	"tab_size": 4,
	"hard_tabs": true,
	"cursor_shape": "underline",

	"lsp": {
		"rust-analyzer": {
			"enabled": false
		}
	}
}
